<div class="card mt-4">
  <div class="card-body">
    <h5 class="card-title"><%= recipe.name %></h5>
    <p class="card-text"><strong>Preparation time:</strong> <%= recipe.preparation_time %> hours</p>
    <p class="card-text"><strong>Cooking time:</strong> <%= recipe.cooking_time %> hours</p>
    <p class="card-text"><strong>Description:</strong> <%= recipe.description %></p>
    <p class="card-text"><strong>Public:</strong> <%= recipe.public %></p>
    <p class="card-text"><strong>By:</strong> <%= recipe.user.name %></p>
    <%= button_to "Remove", recipe, method: :delete, class: 'btn btn-danger' %>
    <%= link_to "Show this recipe", recipe, class: 'btn btn-primary' %>
  </div>
</div>
