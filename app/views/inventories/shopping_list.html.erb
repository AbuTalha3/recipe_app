<h1> Shopping List </h1>
Amount of food to buy: <%= @shopping_list_foods.length %> <br>
Total price: <%= @shopping_list_foods.sum { |food| food.price * food.quantity } %> <br>
Recipe: <%= link_to @recipe.name, recipe_path(@recipe) %> <br>
Inventory: <%= link_to @inventory.name, inventory_path(@inventory) %> <br>

<div id="shopping-list">
  <% @shopping_list_foods.each do |food| %>
    <p>
        <strong>Food:</strong>
        <%= food.name %>
    </p>

    <p>
        <strong>Quantity:</strong>
        <%= "#{food.quantity} #{food.measurement_unit}" %>
    </p>

    <p>
        <strong>Price:</strong>
        <%= food.price * food.quantity %>
    </p>
  <% end %>
</div>
